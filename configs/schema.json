{
    "properties": {
        "shopName":    {
            "type":    "string",
            "options": {
                "label":   "Shop Name",
                "required": true
            }
        },
        "appVersion": {
            "type": "string",
            "options": {
                "label": "App Version",
                "required": true,
                "description": "The version of your app. Incrementing these will trigger update events next login.",
                "default": "0.0.1"
            }
        },
        "apiKey":       {
            "type":    "string",
            "options": {
                "label":       "API Key",
                "required":     true
            }
        },
        "sharedSecret": {
            "type":    "string",
            "options": {
                "label":       "Shared Secret",
                "required":    true
            }
        },
        "scope": {
            "type":    "string",
            "options": {
                "label":       "Scope",
                "default":     "read_products"
            }
        },
        "redirectUrl": {
            "type":    "string",
            "options": {
                "label":       "Redirect URL",
                "default":     "Where to send someone after authenticating."
            }
        }
    }
}